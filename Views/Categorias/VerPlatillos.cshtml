@model IEnumerable<Restaurante.Models.Platillo>
@{
    ViewData["Title"] = "VerPlatillos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class = "row row-cols-3 justify-content-center align-items-center">
    @foreach(var platillo in Model.OrderBy(o => o.Id))
    {
        
        <div class="card justify-content-center align-items-center" style="width: 18rem">
            <img src="/@platillo.UrlImagen" class="card-img-top" width="200" height = "150" class ="p-10">
            <div class="card-body">
                <h5 class="card-title text-center">@platillo.Nombre</h5>
                <p class="card-text">@platillo.Descripcion</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayNameFor(model => model.Precio): @platillo.Precio</li>
                
            </ul>
          </div>
    }
</div>

<div class = "row justify-content-center align-items-center">
    <a asp-controller = "Home" asp-action="Index">
        <button type="button" class="btn btn-outline-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z"></path>
            </svg>
            Regresar
        </button>
    </a>
</div>




