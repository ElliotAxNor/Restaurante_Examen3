@model IEnumerable<Restaurante.Models.Platillo>
@{
    ViewData["Title"] = "VerPlatillos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class = "row row-cols-3 justify-content-center align-items-center">
    @foreach(var platillo in Model.OrderBy(o => o.Id))
    {
        
        <div class="card justify-content-center align-items-center" style="width: 18rem">
            <img src="/@platillo.UrlImagen" class="card-img-top" width="200" height = "150" class ="p-10">
            <div class="card-body">
                <h5 class="card-title text-center">@platillo.Nombre</h5>
                <p class="card-text">@platillo.Descripcion</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayNameFor(model => model.Precio): @platillo.Precio</li>
                
            </ul>
          </div>
    }
</div>


